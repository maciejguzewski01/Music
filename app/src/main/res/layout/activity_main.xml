<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >


    <TableRow
        android:gravity="center_horizontal"
        android:id="@+id/row_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/playlists_button"

            android:text="Playlisty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />

        <Button
            android:id="@+id/settings_button"


            android:text="Ustawienia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:id="@+id/row_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/default_music_cover"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:id="@+id/row_tittle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:id="@+id/row_artist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
    </TableRow>


    <TableRow
        android:gravity="center"
        android:id="@+id/row_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
    </TableRow>


    <TableRow
        android:gravity="center_horizontal"
        android:id="@+id/row_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:id="@+id/previous_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/previous_button"
            android:background="@null"
            android:scaleType="fitCenter"

            />

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/play_button"
            android:scaleType="fitCenter"

            />
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/next_button"
            android:background="@null"
            android:scaleType="fitCenter"


            />
    </TableRow>



</TableLayout>